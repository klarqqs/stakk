# Database
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Stellar
# Use "testnet" for development - uses free Friendbot, no treasury needed
# Use "mainnet" for production - requires TREASURY_SECRET_KEY and funded treasury
STELLAR_NETWORK=testnet
STELLAR_HORIZON_URL=https://horizon.stellar.org
TREASURY_SECRET_KEY=S...your_secret_key_from_treasury_wallet
TREASURY_PUBLIC_KEY=G...your_public_key_for_monitoring

# Flutterwave
FLUTTERWAVE_SECRET_KEY=FLWSECK-...
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK-...
FLUTTERWAVE_ENCRYPTION_KEY=...
FLUTTERWAVE_SECRET_HASH=your_webhook_secret
# Optional: Callback URL for transfer status (e.g. https://your-api.com/webhook/transfer)
# FLUTTERWAVE_CALLBACK_URL=https://your-api.com/webhook/transfer

# Deposit limits (NGN)
MAX_DEPOSIT_NGN=500000
MAX_DEPOSIT_PER_USER_NGN=2000000
MAX_DAILY_DEPOSITS_NGN=10000000

# Rates (update regularly)
NGN_USD_RATE=1580
DEPOSIT_FEE_RATE=0.015

# Blend Protocol (USDC Yield)
# Optional: for live APY fetch. Omit to use default 5.5%
# STELLAR_RPC_URL=https://soroban-rpc.mainnet.stellar.org
# STELLAR_PASSPHRASE=Public Global Stellar Network ; September 2015
# BLEND_USDC_POOL_ID=C...

# App
PORT=3001
NODE_ENV=production
JWT_SECRET=change_this_to_a_secure_random_string

# Email (for OTP - required for signup)
# Option 1: Resend (recommended - HTTP API, works from Railway)
EMAIL_SERVICE=resend
RESEND_API_KEY=re_xxxx
# Option 2: SendGrid
# EMAIL_SERVICE=sendgrid
# SENDGRID_API_KEY=SG....
# Option 3: Gmail (often fails from cloud)
# EMAIL_SERVICE=gmail
# GMAIL_USER=your@gmail.com
# GMAIL_APP_PASSWORD=your_app_password
EMAIL_FROM=onboarding@resend.dev

# Firebase Cloud Messaging (FCM)
# Option 1: File path (for local development)
# FIREBASE_SERVICE_ACCOUNT=@./config/firebase-service-account.json
# Option 2: JSON string (for Railway/production - minify the JSON to one line)
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id",...}

# Google OAuth (for Google Sign-In)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# Apple OAuth (for Apple Sign-In)
APPLE_CLIENT_ID=com.stakk.stakkSavings

# CORS Configuration
# Comma-separated list of allowed origins (leave empty for defaults)
# Production defaults: https://stakk.app,https://www.stakk.app,https://app.stakk.app
# Development defaults: http://localhost:3000,http://localhost:8080
# CORS_ORIGINS=https://stakk.app,https://www.stakk.app

# Sentry Error Tracking (Optional)
# Get DSN from https://sentry.io after creating a Node.js project
# SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
# SENTRY_RELEASE=stakk-backend@1.0.0
